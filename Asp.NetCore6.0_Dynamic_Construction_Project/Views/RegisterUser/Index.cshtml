@model UserSignUpViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!doctype html>
<html lang="en">
<head>
    <title>Menduh İnşaat Kayıt Ekranı</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


    <link href="~/Login/css/style.css" rel="stylesheet" />

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="img" style="background-image: url('/Login/images/bg-1.jpg'); ">
                        </div>
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                    <h3 class="mb-4">Kayıt Ol</h3>
                                </div>
                                <div class="w-100">
                                    <p class="social-media d-flex justify-content-end">
                                        <a href="https://www.instagram.com/menduhinsaat/" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                        <a href="https://www.instagram.com/menduhinsaat/" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                    </p>
                                </div>
                            </div>
                            <form class="signin-form" asp-action="Index">
                                <div class="form-group mb-3">
                                    <span asp-validation-for="@Model.NameSurname" class="text-gray-dark"></span>
                                    <label class="label" for="name">Adınız Soyadınız</label>
                                    <input type="text" asp-for="@Model.NameSurname" class="form-control" placeholder="Adınız Soyadınız" required>
                                </div>

                                <div class="form-group mb-3">
                                    <span asp-validation-for="@Model.UserName" class="text-gray-dark"></span>
                                    <label class="label" for="name">Kullanıcı Adı</label>
                                    <input type="text" asp-for="@Model.UserName" class="form-control" placeholder="Kullanıcı Adı" required>
                                </div>
                                <div class="form-group mb-3">
                                    <span asp-validation-for="@Model.Mail" class="text-gray-dark"></span>
                                    <label class="label" for="name">Mail Adresiniz</label>
                                    <input type="text" asp-for="@Model.Mail" class="form-control" placeholder="Mail Adresiniz" required>
                                </div>
                             
                                <div class="form-group mb-3">
                                    <span asp-validation-for="@Model.Password" class="text-gray-dark"></span>
                                    <label class="label" for="password">Şifre</label>
                                    <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Şifre" required>
                                </div>
                                <div class="form-group mb-3">
                                    <span asp-validation-for="@Model.ConfirmPassword" class="text-gray-dark"></span>
                                    <label class="label" for="password">Şifre Tekrar</label>
                                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Kayıt Ol</button>
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly">

                                </div>
                                <div class="form-group d-md-flex">
                                    <div class="w-50 text-left">
                                        <label class="checkbox-wrap checkbox-primary mb-0">
                                            Beni Hatırla
                                            <input type="checkbox" checked>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="w-50 text-md-right">
                                        <a href="#">Şifreni Mi Unuttun ?</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>

