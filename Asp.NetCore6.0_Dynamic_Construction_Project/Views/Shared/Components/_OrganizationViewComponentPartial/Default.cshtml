@model List<Organization>

<section id="events" class="events">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Etkinlik</h2>
            <p>Organizasyonlarımız</p>
        </div>

        <div class="events-slider swiper-container" data-aos="fade-up" data-aos-delay="100">
            <div class="swiper-wrapper">
                @foreach (var item in Model)
                {
                    <div class="swiper-slide">
                        <div class="row event-item">
                            <div class="col-lg-6">
                                <img src="@item.OrganizationImage" class="img-fluid" alt="">
                            </div>
                            <div class="col-lg-6 pt-4 pt-lg-0 content">
                                <h3>@item.OrganizationTitle</h3>
                                <div class="price">
                                    <p><span></span></p>
                                </div>
                                <p class="fst-italic">
                                    @item.OrganizationDetails1
                                </p>
                                <ul>
                                    <li><i class="bi bi-check-circled"></i> @item.OrganizationShortDescription1</li>
                                    <li><i class="bi bi-check-circled"></i> @item.OrganizationShortDescription2</li>
                                    <li><i class="bi bi-check-circled"></i> @item.OrganizationShortDescription3</li>
                                </ul>
                                <p>
                                    @item.OrganizationDetails2
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="swiper-pagination"></div>
        </div>

    </div>
</section>