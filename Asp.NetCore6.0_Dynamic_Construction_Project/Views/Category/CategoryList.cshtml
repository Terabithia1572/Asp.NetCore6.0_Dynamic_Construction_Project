@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kategoriler</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Kategori Adı</th>
                                <th>Kategori Açıklaması</th>
                                <th>Durumu</th>
                                <th>Sil</th>
                                <th>Detaylar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CategoryID</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.CategoryDescription</td>
                                    <td>@item.CategoryStatus</td>

                                    <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-gradient-dark">Güncelle</a> </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-primary" href="/Category/AddCategory/">Yeni Kategori Ekle</a>