@model List<Employee>
@{
    ViewData["Title"] = "EmployeeList";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!doctype html>
<html lang="en-US">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Employee list with DataTable template. Bootstrap 4 Admin HTML Theme is a material design and bootstrap 4 based responsive dashboard template by propeller created mainly for admin and backend applications.">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Bootstrap 4 Admin HTML Theme - Employee List with DataTable Template</title>
    <link rel="shortcut icon" type="image/x-icon" href="themes/images/favicon.ico">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Rubik:300,400,500,700" rel="stylesheet">

    <link href="~/ExtreTheme/themes/css/bootstrap4-admin-compress.min.css" rel="stylesheet" />



    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'assets/js/analytics.js', 'ga');

        ga('create', 'UA-124615-22', 'auto');
        ga('send', 'pageview');
    </script>
    <link rel="canonical" href="employee-list-with-datatable.html" />
</head>
<body>

    <div class="row">
        @foreach (var item in Model)
        {


            <div class="col-md-6 col-xl-4 col-12">
                <div class="card pmd-card user-info-card">
                    <div class="card-header pmd-card-border d-flex flex-row align-items-center">
                        <a class="pmd-avatar-list-img" href="javascript:void(0);">
                            <img src="@item.EmployeeImage" width="40" height="40" alt="Profile Picture">
                        </a>
                        <div class="media-body">
                            <h3 class="card-title">@item.EmployeeName @item.EmployeeSurName</h3>
                            <p class="card-subtitle">Kurucu</p>
                        </div>
                        <div class="dropdown pmd-dropdown pmd-user-info ml-auto">
                            <a href="javascript:void(0);" class="pmd-btn-fab btn-dark pmd-btn-flat btn btn-sm" data-toggle="dropdown" aria-expanded="true"><i class="material-icons pmd-icon-sm">more_vert</i></a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item d-flex flex-row align-items-center" href="/Employee/UpdateEmployee/@item.EmployeeID/"><i class="material-icons md-dark pmd-icon-sm mr-3">edit</i><span class="media-body">Düzenle</span></a>
                                <a href="/Employee/DeleteEmployee/@item.EmployeeID" title="Delete" class="dropdown-item d-flex flex-row align-items-center" data-toggle="modal" data-target="#delete_employee_modal"><i class="material-icons md-dark pmd-icon-sm mr-3">delete</i><span class="media-body">Sil</span></a>
                            </div>
                        </div>
                    </div>

                    <ul class="list-group pmd-list">
                        <li class="list-group-item d-flex flex-row">
                            <i class="material-icons pmd-list-icon align-self-center pmd-md md-dark">person_outline</i>
                            <div class="media-body">
                                <label class="pmd-list-subtitle">Personel Kimliği</label>
                                <p class="pmd-list-title">@item.EmployeeID</p>
                            </div>
                        </li>

                        <li class="list-group-item d-flex flex-row">
                            <i class="material-icons pmd-list-icon align-self-center pmd-md md-dark">visibility</i>
                            <div class="media-body">
                                <label class="pmd-list-subtitle">İnstagram</label>
                                <p class="pmd-list-title">
                                    <a href="@item.EmployeeInstagram">
                                        @if (item.EmployeeInstagram != null && item.EmployeeInstagram.Length > 35)
                                        {
                                            @item.EmployeeInstagram.Substring(26)
                                        }
                                        else
                                        {
                                            @item.EmployeeInstagram
                                        }
                                    </a>
                                </p>
                            </div>
                        </li>
                        <li class="list-group-item d-flex flex-row">
                            <i class="material-icons pmd-list-icon align-self-center pmd-md md-dark">touch_app</i>
                            <div class="media-body">
                                <label class="pmd-list-subtitle">Twitter</label>
                                <p class="pmd-list-title">
                                    <a href="@item.EmployeeTwitter">
                                        @if (item.EmployeeTwitter != null && item.EmployeeTwitter.Length > 35)
                                        {
                                            @item.EmployeeTwitter.Substring(26)
                                        }
                                        else
                                        {
                                            @item.EmployeeTwitter
                                        }
                                    </a>
                                </p>
                            </div>
                        </li>
                        <li class="list-group-item d-flex flex-row">
                            <i class="material-icons pmd-list-icon align-self-center pmd-md md-dark">thumb_up</i>
                            <div class="media-body">
                                <label class="pmd-list-subtitle">Facebook</label>
                                <p class="pmd-list-title">
                                    <a href="@item.EmployeeFacebook">
                                        @if (item.EmployeeFacebook != null && item.EmployeeFacebook.Length > 30)
                                        {
                                            @item.EmployeeFacebook.Substring(25)
                                        }
                                        else
                                        {
                                            @item.EmployeeFacebook
                                        }
                                    </a>
                                </p>
                            </div>
                        </li>
                        <li class="list-group-item d-flex flex-row">
                            <i class="material-icons pmd-list-icon align-self-center pmd-md md-dark">mail_outline</i>
                            <div class="media-body">
                                <label class="pmd-list-subtitle">Linkedin</label>
                                <p class="pmd-list-title">
                                    <a href="@item.EmployeeLinkedin">
                                        @if (item.EmployeeLinkedin != null && item.EmployeeLinkedin.Length > 35)
                                        {
                                            @item.EmployeeLinkedin.Substring(26)
                                        }
                                        else
                                        {
                                            @item.EmployeeLinkedin
                                        }
                                    </a>
                                </p>
                            </div>
                        </li>
                        <li class="list-group-item d-flex flex-row">
                            <i class="material-icons pmd-list-icon align-self-center pmd-md md-dark">people_outline</i>
                            <div class="media-body">
                                <label class="pmd-list-subtitle">Durum</label>

                                <p class="pmd-list-title">@item.EmployeeStatus</p>
                            </div>
                        </li>

                    </ul><!-- List Group Component End -->
                    <!-- Card Footer -->
                    <div class="card-footer pmd-card-border">
                        <a title="Ekle" href="/Employee/AddEmployee/" class="btn btn-success" style="border-radius:10px">Ekle</a>
                        <a title="Sil" href="/Employee/DeleteEmployee/@item.EmployeeID" class="btn btn-danger" style="border-radius:10px">Sil</a>
                        <a title="Güncelle" href="/Employee/UpdateEmployee/@item.EmployeeID" class="btn btn-primary" style="border-radius:10px">Güncelle</a>
                    </div>
                </div>
                <!-- Card Component End -->
            </div>
        }
    </div>

    <script src="~/ExtreTheme/themes/js/bootstrap4-admin-compress.min.js"></script>
    <!-- /build -->

    <script>
        $(document).ready(function () {
            var sPath = window.location.pathname;
            var sPage = sPath.substring(sPath.lastIndexOf('http://themes.propeller.in/') + 1);
            $(".pmd-sidebar-nav").each(function () {
                $(this).find("a[href='" + sPage + "']").parents(".collapse").addClass("show");
                $(this).find("a[href='" + sPage + "']").parents(".collapse").prev('a.nav-link').addClass("active");
                $(this).find("a[href='" + sPage + "']").addClass("active");
            });

            $(".auto-update-year").html(new Date().getFullYear());
        });
    </script>
    <script type="text/javascript">

        // Advanced Search Toggle
        $("#advanced-search-toggler").click(function () {
            $(".search-form").toggle();
            $(".advanced-search-title").toggle();
        });

        // Filter Tags Toggle
        $("#apply-filter").click(function () {
            $(".filter-tags").show();
        });
        // $("#search").click(function(){
        //     $(".filter-tags").show();
        // });

        // Date of Joining Datepicker
        $('#datepicker').datetimepicker({
            format: 'DD-MM-YYYY'
        });

    </script>


</body>

</html>


