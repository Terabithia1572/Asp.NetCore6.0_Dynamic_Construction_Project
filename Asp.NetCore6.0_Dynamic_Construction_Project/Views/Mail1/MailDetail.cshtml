@using Asp.NetCore6._0_Dynamic_Construction_Project.Controllers

@model List<Mail>
@{
    ViewData["Title"] = "MailDetail";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card">
    @foreach (var item in Model)
    {
        <div class="card-header">
            <div class="row align-items-center">
                <!-- Avatar and User Info -->
                <div class="col-md d-flex align-items-center">
                    <div class="flex-1 ms-3">
                        <h5 class="mb-0">
                            @item.MailTitle
                        </h5>
                        <a class="text-800 fs-10" href="#!">
                            <span class="fw-semi-bold">@item.MailName @item.MailSurname</span>
                            <span class="ms-1 text-500">&lt;@item.ReceiverMail&gt;</span>
                        </a>
                    </div>
                </div>
                <!-- Time and Star Icon -->
                <div class="col-md-auto ms-auto d-flex align-items-center">
                    <small>@item.MailDate.TimeAgo()</small>
                    <span class="fas fa-star text-warning fs-10 ms-2"></span>
                </div>
            </div>
        </div>
        <div class="card-body bg-body-tertiary">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xxl-6">
                    <!-- Card with Image and Content -->
                    <div class="card shadow-none mb-4">
                        <div class="card-body">
                            <h3 class="fw-semi-bold">@item.MailTitle</h3>
                            <p>@item.MailContent</p>
                        </div>
                    </div>
                    <!-- Social Media Icons -->
                </div>
            </div>
        </div>
    }
</div>


