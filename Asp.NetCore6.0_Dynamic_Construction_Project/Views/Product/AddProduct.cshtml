@model Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Yeni Ürün Girişi</h1>
<br />

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post))
{
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Açıklaması")
    @Html.TextAreaFor(x => x.ProductDescription, 15, 3, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Fiyatı")
    @Html.TextAreaFor(x => x.ProductPrice, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Görseli")
    @Html.TextBoxFor(x => x.ProductImage, new { @class = "form-control" })
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })

    <br />
    <button class="btn btn-info">Ürün'ü Kaydet</button>

}

