@model Product
@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Ürün Düzenleme Sayfası</h1>
@using (Html.BeginForm("EditProduct", "Product", FormMethod.Post))
{
    @Html.Label("Ürün ID")
    @Html.TextBoxFor(x => x.ProductID, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Açıklaması")
    @Html.TextAreaFor(x => x.ProductDescription, 15, 3, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Fiyatı")
    @Html.TextAreaFor(x => x.ProductPrice, new { @class = "form-control" })
    <br />
    @Html.Label("Ürün Görseli")
    @Html.TextBoxFor(x => x.ProductImage, new { @class = "form-control" })
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.cm, new { @class = "form-control" })

    <br />
    <button class="btn btn-info">Ürün'ü Kaydet</button>

}


